<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LLM News Aggregator</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap');
        
        * {
            font-family: 'Space Grotesk', sans-serif;
        }
        
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
            --secondary-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            --accent-gradient: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
            --dark-gradient: linear-gradient(135deg, #2d1b69 0%, #11998e 100%);
        }
        
        body {
            background: var(--primary-gradient);
            background-size: 400% 400%;
            animation: gradientFlow 20s ease infinite;
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
        }
        
        /* Animated background */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 20% 20%, rgba(79, 172, 254, 0.4) 0%, transparent 50%),
                radial-gradient(circle at 80% 80%, rgba(250, 112, 154, 0.4) 0%, transparent 50%),
                radial-gradient(circle at 60% 20%, rgba(164, 69, 178, 0.3) 0%, transparent 50%);
            pointer-events: none;
            z-index: 0;
            animation: bgShift 25s ease infinite;
        }
        
        @keyframes gradientFlow {
            0%, 100% { background-position: 0% 50%; }
            25% { background-position: 100% 50%; }
            50% { background-position: 100% 100%; }
            75% { background-position: 0% 100%; }
        }
        
        @keyframes bgShift {
            0%, 100% { opacity: 1; transform: scale(1) rotate(0deg); }
            33% { opacity: 0.8; transform: scale(1.1) rotate(120deg); }
            66% { opacity: 0.9; transform: scale(0.95) rotate(240deg); }
        }
        
        .container {
            position: relative;
            z-index: 1;
        }
        
        /* Glassmorphism components */
        .glass-morphism {
            background: rgba(255, 255, 255, 0.08);
            backdrop-filter: blur(25px);
            -webkit-backdrop-filter: blur(25px);
            border: 1px solid rgba(255, 255, 255, 0.15);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }
        
        .glass-morphism:hover {
            background: rgba(255, 255, 255, 0.12);
            border-color: rgba(255, 255, 255, 0.25);
            transform: translateY(-5px);
        }
        
        /* Epic title styling */
        .hero-title {
            font-weight: 800;
            background: linear-gradient(135deg, #ffffff 0%, #f8fafc 50%, #e2e8f0 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-shadow: 0 0 50px rgba(255, 255, 255, 0.8);
            animation: titleFloat 4s ease-in-out infinite alternate, titleGlow 2s ease-in-out infinite alternate;
            position: relative;
            letter-spacing: -0.02em;
        }
        
        .hero-title::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 120%;
            height: 120%;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
            transform: translate(-50%, -50%);
            z-index: -1;
            animation: halo 3s ease-in-out infinite;
        }
        
        @keyframes titleFloat {
            0% { transform: translateY(0px); }
            100% { transform: translateY(-8px); }
        }
        
        @keyframes titleGlow {
            0% { text-shadow: 0 0 30px rgba(255, 255, 255, 0.5); }
            100% { text-shadow: 0 0 50px rgba(255, 255, 255, 0.8), 0 0 70px rgba(167, 139, 250, 0.4); }
        }
        
        @keyframes halo {
            0%, 100% { opacity: 0.3; transform: translate(-50%, -50%) scale(1); }
            50% { opacity: 0.6; transform: translate(-50%, -50%) scale(1.1); }
        }
        
        /* Premium search bar */
        .search-container {
            position: relative;
            overflow: hidden;
        }
        
        .search-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            animation: searchShimmer 4s infinite;
        }
        
        @keyframes searchShimmer {
            0% { left: -100%; }
            50% { left: -100%; }
            100% { left: 100%; }
        }
        
        .premium-input {
            background: rgba(255, 255, 255, 0.95);
            border: 2px solid rgba(255, 255, 255, 0.3);
            backdrop-filter: blur(10px);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            font-weight: 500;
        }
        
        .premium-input:focus {
            background: rgba(255, 255, 255, 1);
            border-color: #8b5cf6;
            transform: translateY(-3px) scale(1.02);
            box-shadow: 
                0 15px 35px rgba(139, 92, 246, 0.3),
                0 5px 15px rgba(139, 92, 246, 0.2),
                inset 0 1px 0 rgba(255, 255, 255, 0.6);
        }
        
        .premium-input::placeholder {
            color: #64748b;
            font-weight: 400;
        }
        
        .cta-button {
            background: linear-gradient(135deg, #8b5cf6, #ec4899, #f59e0b);
            background-size: 200% 200%;
            border: none;
            position: relative;
            overflow: hidden;
            font-weight: 600;
            letter-spacing: 0.5px;
            text-transform: uppercase;
            font-size: 0.875rem;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            animation: buttonGradientShift 3s ease infinite;
        }
        
        @keyframes buttonGradientShift {
            0%, 100% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
        }
        
        .cta-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
            transition: left 0.6s ease;
        }
        
        .cta-button:hover {
            transform: translateY(-4px) scale(1.05);
            box-shadow: 
                0 20px 40px rgba(139, 92, 246, 0.4),
                0 10px 20px rgba(236, 72, 153, 0.3);
            animation-play-state: paused;
            background-position: 100% 50%;
        }
        
        .cta-button:hover::before {
            left: 100%;
        }
        
        .cta-button:active {
            transform: translateY(-2px) scale(1.02);
        }
        
        /* Premium article cards */
        .premium-card {
            background: rgba(255, 255, 255, 0.08);
            backdrop-filter: blur(25px);
            -webkit-backdrop-filter: blur(25px);
            border: 1px solid rgba(255, 255, 255, 0.15);
            transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }
        
        .premium-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, 
                rgba(139, 92, 246, 0.1) 0%, 
                rgba(236, 72, 153, 0.1) 50%, 
                rgba(245, 158, 11, 0.1) 100%);
            opacity: 0;
            transition: opacity 0.4s ease;
            z-index: 1;
        }
        
        .premium-card:hover::before {
            opacity: 1;
        }
        
        .premium-card:hover {
            transform: translateY(-20px) rotateX(8deg) rotateY(5deg);
            box-shadow: 
                0 35px 70px rgba(0, 0, 0, 0.2),
                0 15px 35px rgba(139, 92, 246, 0.2),
                inset 0 1px 0 rgba(255, 255, 255, 0.3);
            border-color: rgba(255, 255, 255, 0.4);
        }
        
        .card-content {
            position: relative;
            z-index: 2;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
        }
        
        .premium-image {
            position: relative;
            overflow: hidden;
        }
        
        .premium-image::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(139, 92, 246, 0.2), rgba(236, 72, 153, 0.2));
            opacity: 0;
            transition: opacity 0.4s ease;
            z-index: 2;
        }
        
        .premium-card:hover .premium-image::before {
            opacity: 1;
        }
        
        .article-image {
            transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
            filter: brightness(1) contrast(1.1) saturate(1.1);
        }
        
        .premium-card:hover .article-image {
            transform: scale(1.15) rotate(2deg);
            filter: brightness(1.2) contrast(1.3) saturate(1.3);
        }
        
        .trending-badge {
            background: linear-gradient(135deg, #ec4899, #8b5cf6);
            position: absolute;
            top: 15px;
            right: 15px;
            z-index: 3;
            font-family: 'JetBrains Mono', monospace;
            font-weight: 600;
            letter-spacing: 1px;
            animation: badgePulse 2s ease-in-out infinite;
        }
        
        @keyframes badgePulse {
            0%, 100% { transform: scale(1); box-shadow: 0 0 0 rgba(236, 72, 153, 0.7); }
            50% { transform: scale(1.05); box-shadow: 0 0 20px rgba(236, 72, 153, 0.4); }
        }
        
        .premium-title {
            background: var(--dark-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            transition: all 0.4s ease;
            font-weight: 700;
            line-height: 1.2;
        }
        
        .premium-card:hover .premium-title {
            background: linear-gradient(135deg, #8b5cf6, #ec4899, #f59e0b);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            transform: translateY(-3px);
        }
        
        .premium-description {
            color: #64748b;
            line-height: 1.6;
            font-weight: 400;
            transition: color 0.3s ease;
        }
        
        .premium-card:hover .premium-description {
            color: #475569;
        }
        
        .premium-link {
            background: linear-gradient(135deg, #8b5cf6, #ec4899);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            position: relative;
            font-weight: 600;
            transition: all 0.4s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }
        
        .premium-link::after {
            content: '';
            position: absolute;
            bottom: -3px;
            left: 0;
            width: 0;
            height: 3px;
            background: linear-gradient(135deg, #8b5cf6, #ec4899);
            transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            border-radius: 2px;
        }
        
        .premium-link:hover::after {
            width: 100%;
        }
        
        .premium-link:hover {
            transform: translateX(8px);
        }
        
        .premium-link svg {
            transition: transform 0.3s ease;
        }
        
        .premium-link:hover svg {
            transform: translateX(4px) rotate(15deg);
        }
        
        /* Staggered animations */
        .fade-in-up {
            animation: fadeInUp 0.8s ease forwards;
            opacity: 0;
            transform: translateY(40px);
        }
        
        .fade-in-up:nth-child(1) { animation-delay: 0.1s; }
        .fade-in-up:nth-child(2) { animation-delay: 0.2s; }
        .fade-in-up:nth-child(3) { animation-delay: 0.3s; }
        .fade-in-up:nth-child(4) { animation-delay: 0.4s; }
        .fade-in-up:nth-child(5) { animation-delay: 0.5s; }
        .fade-in-up:nth-child(6) { animation-delay: 0.6s; }
        .fade-in-up:nth-child(7) { animation-delay: 0.7s; }
        .fade-in-up:nth-child(8) { animation-delay: 0.8s; }
        .fade-in-up:nth-child(9) { animation-delay: 0.9s; }
        
        @keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        /* Floating particles */
        .particle-system {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 0;
        }
        
        .particle {
            position: absolute;
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.6), rgba(167, 139, 250, 0.3));
            border-radius: 50%;
            animation: particleFloat 25s infinite linear;
            box-shadow: 0 0 15px rgba(255, 255, 255, 0.3);
        }
        
        @keyframes particleFloat {
            from {
                transform: translateY(100vh) translateX(-50px) rotate(0deg);
                opacity: 0;
            }
            10%, 90% {
                opacity: 1;
            }
            to {
                transform: translateY(-100vh) translateX(50px) rotate(360deg);
                opacity: 0;
            }
        }
        
        /* No news state styling */
        .no-news-container {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(25px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            animation: noNewsFloat 3s ease-in-out infinite alternate;
            position: relative;
            overflow: hidden;
        }
        
        .no-news-container::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.1) 50%, transparent 70%);
            animation: noNewsShimmer 4s ease infinite;
        }
        
        @keyframes noNewsFloat {
            0% { transform: translateY(0px); }
            100% { transform: translateY(-10px); }
        }
        
        @keyframes noNewsShimmer {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .emoji-large {
            font-size: 4rem;
            animation: emojiDance 2s ease-in-out infinite;
            display: inline-block;
        }
        
        @keyframes emojiDance {
            0%, 100% { transform: rotate(-5deg) scale(1); }
            25% { transform: rotate(5deg) scale(1.1); }
            75% { transform: rotate(-3deg) scale(0.95); }
        }
        
        /* Advanced responsive design */
        @media (max-width: 768px) {
            .hero-title {
                font-size: 2.5rem;
                line-height: 1.1;
            }
            
            .premium-card:hover {
                transform: translateY(-12px);
            }
            
            .glass-morphism {
                margin: 0 10px;
            }
        }
        
        @media (min-width: 1024px) {
            .premium-card {
                transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
            }
            
            .premium-card:hover {
                transform: translateY(-25px) rotateX(10deg) rotateY(8deg) scale(1.02);
            }
        }
        
        /* Accessibility enhancements */
        @media (prefers-reduced-motion: reduce) {
            * {
                animation-duration: 0.01ms !important;
                animation-iteration-count: 1 !important;
                transition-duration: 0.01ms !important;
            }
        }
        
        @media (prefers-contrast: high) {
            .glass-morphism {
                background: rgba(255, 255, 255, 0.95);
                border: 2px solid #000;
            }
            
            .premium-card {
                background: rgba(255, 255, 255, 1);
                border: 2px solid #333;
            }
        }
        
        /* Focus indicators */
        .premium-input:focus,
        .cta-button:focus,
        .premium-link:focus {
            outline: 3px solid #f59e0b;
            outline-offset: 3px;
        }
        
        /* Loading states */
        .loading-shimmer {
            background: linear-gradient(90deg, 
                rgba(255, 255, 255, 0.1) 25%, 
                rgba(255, 255, 255, 0.3) 50%, 
                rgba(255, 255, 255, 0.1) 75%);
            background-size: 200% 100%;
            animation: shimmerEffect 2s infinite;
        }
        
        @keyframes shimmerEffect {
            0% { background-position: -200% 0; }
            100% { background-position: 200% 0; }
        }
        
        /* Subtle grid animations */
        #news-container {
            animation: gridFadeIn 1s ease-out 0.5s both;
        }
        
        @keyframes gridFadeIn {
            from {
                opacity: 0;
                transform: scale(0.95);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }
        
        /* Professional developer showcase elements */
        .code-accent {
            font-family: 'JetBrains Mono', monospace;
            background: var(--dark-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .tech-badge {
            background: rgba(0, 0, 0, 0.7);
            color: #00ff88;
            font-family: 'JetBrains Mono', monospace;
            font-weight: 500;
            letter-spacing: 1px;
            animation: techGlow 2s ease-in-out infinite alternate;
        }
        
        @keyframes techGlow {
            0% { box-shadow: 0 0 10px rgba(0, 255, 136, 0.3); }
            100% { box-shadow: 0 0 25px rgba(0, 255, 136, 0.6), 0 0 50px rgba(0, 255, 136, 0.2); }
        }
    </style>
</head>
<body class="bg-gray-100 font-sans">
    <div class="particle-system">
        <div class="particle" style="left: 10%; width: 6px; height: 6px; animation-delay: 0s;"></div>
        <div class="particle" style="left: 20%; width: 8px; height: 8px; animation-delay: 3s;"></div>
        <div class="particle" style="left: 30%; width: 4px; height: 4px; animation-delay: 6s;"></div>
        <div class="particle" style="left: 40%; width: 7px; height: 7px; animation-delay: 9s;"></div>
        <div class="particle" style="left: 50%; width: 5px; height: 5px; animation-delay: 12s;"></div>
        <div class="particle" style="left: 60%; width: 9px; height: 9px; animation-delay: 15s;"></div>
        <div class="particle" style="left: 70%; width: 4px; height: 4px; animation-delay: 18s;"></div>
        <div class="particle" style="left: 80%; width: 6px; height: 6px; animation-delay: 21s;"></div>
        <div class="particle" style="left: 90%; width: 5px; height: 5px; animation-delay: 24s;"></div>
    </div>
    
    <div class="container mx-auto p-4">
        <div class="text-center mb-4">
            <div class="tech-badge inline-block px-4 py-2 rounded-full text-sm mb-6">
                &gt; REAL-TIME AI NEWS FEED
            </div>
        </div>
        
        <h1 class="hero-title text-4xl md:text-7xl font-bold my-8 text-center">Latest LLM News</h1>

        <div class="glass-morphism p-8 rounded-3xl mb-12 flex items-center justify-center search-container">
            <form action="/search" method="GET" class="w-full max-w-lg">
                <div class="flex">
                    <input
                        class="premium-input w-full px-6 py-4 rounded-l-2xl text-gray-800 placeholder-gray-500 text-lg font-medium"
                        name="search"
                        type="search"
                        placeholder="Discover cutting-edge AI topics..."
                        aria-label="Search"
                        required
                    />
                    <button class="cta-button px-8 py-4 text-white rounded-r-2xl relative z-10" type="submit">
                        Explore
                    </button>
                </div>
            </form>
        </div>

        <div id="news-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% if (news && news.length > 0) { %>
                <% news.forEach((article, index) => { %>
                    <div class="article premium-card rounded-3xl overflow-hidden flex flex-col fade-in-up">
                        <div class="premium-image relative">
                            <img 
                                src="<%= article.image_url || 'https://via.placeholder.com/400x250.png?text=No+Image+Available' %>" 
                                alt="Article Image" 
                                class="article-image w-full h-52 object-cover"
                                onerror="this.src='https://via.placeholder.com/400x250.png?text=No+Image+Available'"
                            >
                            <div class="trending-badge text-white px-3 py-1 rounded-full text-xs">
                                HOT
                            </div>
                        </div>
                        <div class="card-content p-6 flex flex-col flex-grow">
                            <h2 class="premium-title text-xl font-bold mb-4 leading-tight">
                                <%= article.title || 'No Title Available' %>
                            </h2>
                            <p class="premium-description text-sm flex-grow mb-6">
                                <%= article.description ? (article.description.length > 150 ? article.description.substring(0, 150) + '...' : article.description) : 'Discover the latest developments in artificial intelligence and machine learning technology.' %>
                            </p>
                            <div class="flex justify-between items-center mt-auto">
                                <p class="text-gray-400 text-xs code-accent font-medium">
                                    <%= article.pubDate ? new Date(article.pubDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) : 'Recently' %>
                                </p>
                                <a href="<%= article.link || '#' %>" target="_blank" rel="noopener noreferrer" class="premium-link text-lg">
                                    Read Article
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-span-full text-center py-16">
                    <div class="no-news-container rounded-3xl p-16 mx-auto max-w-lg relative">
                        <div class="emoji-large mb-6">ü§ñ</div>
                        <h3 class="text-white text-2xl font-bold mb-4">No AI News Found</h3>
                        <p class="text-purple-200 text-lg mb-2">The algorithms are still learning...</p>
                        <p class="text-purple-300 text-sm">Try a different search term to explore the AI universe!</p>
                    </div>
                </div>
            <% } %>
        </div>
        
        <!-- Professional footer -->
        <div class="text-center mt-16 mb-8">
            <div class="glass-morphism rounded-2xl p-6 inline-block">
                <p class="text-white text-sm">
                    <span class="code-accent font-semibold">Built with</span>
                    <span class="text-purple-200 mx-2">Node.js ‚Ä¢ Express ‚Ä¢ EJS ‚Ä¢ Modern CSS</span>
                </p>
            </div>
        </div>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Enhanced interactions
            const cards = document.querySelectorAll('.premium-card');
            const searchInput = document.querySelector('.premium-input');
            const form = document.querySelector('form');
            
            // Card interaction enhancements
            cards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
                
                card.addEventListener('mouseenter', function() {
                    this.style.zIndex = '10';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.zIndex = '1';
                });
                
                // Add subtle parallax effect
                card.addEventListener('mousemove', function(e) {
                    const rect = this.getBoundingClientRect();
                    const x = e.clientX - rect.left;
                    const y = e.clientY - rect.top;
                    const centerX = rect.width / 2;
                    const centerY = rect.height / 2;
                    const rotateX = (y - centerY) / 10;
                    const rotateY = (centerX - x) / 10;
                    
